set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term /usr/local/bin/alacritty

set $menu rofi -show drun

include /etc/sway/config-vars.d/*

output * bg /home/aron/Pictures/jinx.jpg fill
output eDP-1 resolution 3456x2160 position 0,0

# exec swayidle -w \
